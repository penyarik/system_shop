<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}"/>
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<a href="{{ path('locale', {locale: 'en'}) }}?route={{ path(app.request.attributes.get('_route'),
    app.request.attributes.get('_route_params')) }}">En</a>
<a href="{{ path('locale', {locale: 'ua'}) }}?route={{ path(app.request.attributes.get('_route'),
    app.request.attributes.get('_route_params')) }}">Ua</a>
<a href="{{ path('locale', {locale: 'ru'}) }}?route={{ path(app.request.attributes.get('_route'),
    app.request.attributes.get('_route_params')) }}">Ru</a>
{% block body %}{% endblock %}
</body>
</html>
